<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dreamnyc.myapplication">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar">
        <activity
            android:name="Activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="Activities.ShowReader"
            android:label="@string/title_activity_reader" />
        <activity
            android:name="Activities.ChapterView"
            android:label="@string/title_activity_chapter_view" />
        <activity
            android:name="Activities.FastRead"
            android:label="@string/title_activity_fast_read" />
        <activity
            android:name="Activities.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="Activities.ReadNow"
            android:label="@string/title_activity_read_now" />
    </application>

</manifest>